{
  "name": "whisperdesk",
  "version": "1.1.4",
  "type": "module",
  "description": "Desktop transcription app powered by whisper.cpp",
  "main": "electron/main.cjs",
  "author": {
    "name": "Pedro Siqueira",
    "email": "pedro.v.siqueira@gmail.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "electron": "electron .",
    "electron:dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run setup:whisper:universal && npm run icons && npm run build && electron-builder",
    "electron:build:mac": "npm run setup:whisper:universal && npm run icons && npm run build && electron-builder --mac",
    "electron:build:dir": "npm run setup:whisper:universal && npm run icons && npm run build && electron-builder --dir",
    "icons": "node scripts/generate-icons.js",
    "preview": "vite preview",
    "setup:whisper": "bash scripts/setup-whisper-cpp.sh",
    "setup:whisper:universal": "bash scripts/setup-whisper-cpp.sh --universal",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "typecheck": "tsc --noEmit",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "semantic-release": "semantic-release"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "whisper",
    "whisper.cpp",
    "transcription",
    "electron",
    "audio",
    "video"
  ],
  "license": "MIT",
  "dependencies": {
    "docx": "^8.5.0",
    "electron-updater": "^6.6.2",
    "jspdf": "^2.5.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.3",
    "semantic-release": "^24.2.9",
    "sharp": "^0.34.5",
    "typescript": "~5.6.0",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.whisperdesk.app",
    "productName": "WhisperDesk",
    "copyright": "Copyright Â© 2025 WhisperDesk",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "bin/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/.bin"
    ],
    "asarUnpack": [
      "bin/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "darkModeSupport": true
    },
    "dmg": {
      "title": "WhisperDesk",
      "backgroundColor": "#1a1a2e",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "pedrovsiqueira",
      "repo": "whisperdesk"
    }
  }
}
